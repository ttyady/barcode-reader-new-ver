<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <!-- 説明 -->
    <TextView
        android:id="@+id/text02TitleDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text02_title_detail"
        android:textColor="#333333" />

    <!-- リストビュー -->
    <!-- listSelector="@android:color/transparent"で行を選択しても、その行の色を透過させる事により色が付く事を防ぐ。-->
    <ListView
        android:id="@+id/listView02Product"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:listSelector="@android:color/transparent" />

    <!-- 全削除ボタン -->
    <Button
        android:id="@+id/button02AllDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/button02_alldelete" />
</LinearLayout>