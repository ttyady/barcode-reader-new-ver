            android:textSize="16sp" />
    </RadioGroup>-->

    <!-- 表示ボタン -->
    <Button
        android:id="@+id/buttonShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonRegist"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="@string/button01_show"
        android:textSize="16sp" />

    <Button
        android:id="@+id/re_read_barcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonShow"
        android:text="READ BARCODE"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auto_focus"
        android:id="@+id/re_auto_focus"
        android:layout_below="@+id/re_read_barcode"
        android:layout_marginBottom="77dp"
        android:checked="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/use_flash"
        android:id="@+id/re_use_flash"
        android:layout_toRightOf="@+id/re_auto_focus"
        android:layout_alignBaseline="@id/re_auto_focus"
        android:checked="false" />

    <LinearLayout
        android:id="@+id/linearLayoutDisposal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayoutProduct"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textDisposal"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/text01_number"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text01Kome03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="@string/text01_kome"
            android:textColor="#FF0000"
            android:textSize="14sp" />

        <!-- inputType：表示するキーボードをカレンダーに指定 -->
        <EditText
            android:id="@+id/editTextDisposal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ellipsize="end"
            android:hint="@string/text01_hintdate"
            android:inputType="date"
            android:lines="1"
            android:maxLength="24"
            android:maxLines="1"
            android:minLines="1"
            android:singleLine="true"
            android:textSize="16sp"
            android:focusable="false"
            android:clickable="true"/>
    </LinearLayout>


</RelativeLayout>